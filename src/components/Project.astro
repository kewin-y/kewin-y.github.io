---
import { type ProjectType } from "../types.ts";
import Link from "./Link.astro";

type Props = {
    project: Project;
};

const { project } = Astro.props;
---

<li class="border-black border-2 p-2 flex flex-col gap-2">
    <h1 class="font-bold">{project.title.toUpperCase()}</h1>
    <p>{project.description}</p>
    {
        project.link ? (
            <Link text="See More" href={project.link} />
        ) : (
            <p class="text-gray-400 ">no link</p>
        )
    }
    <ul class="flex flex-wrap gap-4">
        {
            project.tags.map((tag) => (
                <li class="border-black border-2 px-2">{tag}</li>
            ))
        }
    </ul>
</li>
