---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blogs");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

type Props = { post: CollectionEntry<"blogs"> };

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title=`Kevin Yu | ${post.data.title}`>
    <div class="border-b-black border-b-1 gap-4 flex flex-col pb-5 mb-5">
        <h1 class="text-2xl font-bold">{post.data.title}</h1>
        <time datetime={post.data.pubDate.toISOString()}>
            {
                post.data.pubDate.toLocaleDateString("en-us", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                })
            }
        </time>
    </div>
    <div class="!max-w-none prose prose-base prose-black">
        <Content />
    </div>
</Layout>
